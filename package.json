{
  "name": "dompile",
  "version": "0.5.0",
  "description": "A lightweight, framework-free static site generator with Apache SSI-style includes and live reload",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "dompile": "bin/cli.js"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "watch": "node bin/cli.js watch --source examples/basic/src --output examples/basic/dist",
    "serve": "npx live-server examples/basic/dist --port=3000 --wait=500",
    "example": "npm run build && npm run serve",
    "build": "node bin/cli.js build --source examples/basic/src --output  examples/basic/dist"
  },
  "keywords": [
    "static-site-generator",
    "html",
    "includes",
    "ssi",
    "build-tool",
    "frontend",
    "development",
    "live-reload"
  ],
  "author": "DOMpile Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/dompile.git"
  },
  "bugs": {
    "url": "https://github.com/username/dompile/issues"
  },
  "homepage": "https://github.com/username/dompile#readme",
  "dependencies": {
    "chokidar": "^3.5.3",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.1.0"
  },
  "optionalDependencies": {
    "live-server": "^1.2.2"
  },
  "files": [
    "bin/",
    "src/",
    "README.md"
  ]
}
